{
  "name": "walmartlabs",
  "version": "1.0.0",
  "description": "Simple REST API to take a keyword and return a list of products",
  "main": "index.js",
  "scripts": {

    "prebuild": "rm -rf dist",
    "build": "npx babel src --out-dir dist/src && npx babel *.js --out-dir dist",
    "predocker:build": "npm run build",
    "docker:build": "docker build --no-cache -t walmart-product-search .",
    "docker:run": "docker run -d -p 3000:3000 --name walmart-product-search walmart-product-search",
    "docker:logs": "docker logs -f walmart-product-search | bunyan",
    "docker:kill": "docker rm -f walmart-product-search",
    "start": "nodemon index.js --exec babel-node | bunyan",
    "lint": "standard",
    "test": "NODE_ENV=test nyc mocha tests/**/*.js | bunyan -l fatal"
  },
  "keywords": [
    "walmartlabs",
    "product-search",
    "search",
    "nodejs",
    "hapi",
    "fuse",
    "docker",
    "async"
  ],
  "author": "Justin Shuck",
  "license": "ISC",
  "dependencies": {
    "async": "^2.6.1",
    "boom": "^7.2.0",
    "bunyan": "^1.8.12",
    "config": "^2.0.1",
    "fuse.js": "^3.2.1",
    "hapi": "^17.5.4",
    "joi": "^13.6.0",
    "limiter": "^1.1.3",
    "lodash": "^4.17.10",
    "request": "^2.88.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-istanbul": "^0.12.2",
    "babel-plugin-istanbul": "^5.0.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nock": "^9.6.1",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "sinon": "^6.2.0",
    "standard": "^12.0.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false,
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/index.js"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
